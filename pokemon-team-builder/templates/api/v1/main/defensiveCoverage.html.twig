{% extends 'base.html.twig' %}

{% block stylesheets %}
     <link href="{{ asset('css/style.css') }}" rel="stylesheet">
{% endblock %}

{% block title %} API Pokebuild {% endblock %}

{% block body %}
<div class="wrapper">
{{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
{{ form_errors(form.pokemon) }}
<div class="form__pokemon-label">
{{ form_label(form.pokemon) }}
</div>
<div class="form__pokemon-checkbox">
{{ form_widget(form.pokemon) }}
</div>
{{ form_end(form) }}
</div>
{% endblock %}